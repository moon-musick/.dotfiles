# This tmux statusbar config was created by tmuxline.vim
# on wto, 19 maj 2015

set -g status-bg "colour14"
set -g message-command-fg "colour8"
set -g status-justify "left"
set -g status-left-length "100"
set -g status "on"
# set -g pane-active-border-fg "colour10"
set -g pane-active-border-fg "colour4"
set -g pane-border-fg "colour10"
set -g message-bg "colour12"
set -g status-right-length "100"
set -g status-right-attr "none"
set -g message-fg "colour8"
set -g message-command-bg "colour12"
set -g status-attr "none"
set -g status-utf8 "on"
set -g status-left-attr "none"
setw -g window-status-fg "colour8"
setw -g window-status-attr "none"
setw -g window-status-activity-bg "colour14"
setw -g window-status-activity-attr "none"
setw -g window-status-activity-fg "colour10"
setw -g window-status-separator ""
setw -g window-status-bg "colour14"
set -g status-left "#[fg=colour7,bg=colour10] #S #[fg=colour10,bg=colour14,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=colour12,bg=colour14,nobold,nounderscore,noitalics]#[fg=colour8,bg=colour12] %Y-%m-%d  %H:%M #[fg=colour10,bg=colour12,nobold,nounderscore,noitalics]#[fg=colour7,bg=colour10] #h "
setw -g window-status-format "#[fg=colour8,bg=colour14] #I #[fg=colour8,bg=colour14] #W "
setw -g window-status-current-format "#[fg=colour14,bg=colour12,nobold,nounderscore,noitalics]#[fg=colour8,bg=colour12] #I #[fg=colour8,bg=colour12] #W #[fg=colour12,bg=colour14,nobold,nounderscore,noitalics]"
